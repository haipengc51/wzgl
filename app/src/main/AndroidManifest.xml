<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiekai.wzgl">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/> <!--扫描二维码是否需要动态权限-->
    <uses-permission android:name="android.permission.VIBRATE"/>    <!--zxing震动权限-->

    <uses-feature android:name="android.hardware.nfc" android:required="true"/> <!--使用者必须有nfc功能-->

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".ui.WelcomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.KeeperMainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.BindDeviceActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity android:name=".utils.zxing.CaptureActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>